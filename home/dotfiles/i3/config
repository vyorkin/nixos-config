bindsym $hyper+Shift+r restart

mode "resize" {
  bindsym h resize shrink width 5 px or 5 ppt
  bindsym j resize grow height 5 px or 5 ppt
  bindsym k resize shrink height 5 px or 5 ppt
  bindsym l resize grow width 5 px or 5 ppt

  bindsym Left resize shrink width 5 px or 5 ppt
  bindsym Down resize grow height 5 px or 5 ppt
  bindsym Up resize shrink height 5 px or 5 ppt
  bindsym Right resize grow width 5 px or 5 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bindsym $hyper+s exec --no-startup-id systemctl suspend
bindsym $hyper+n exec --no-startup-id $netrefresh

bindsym XF86ScreenSaver	exec --no-startup-id i3lock-pixeled

bindsym $mod+comma workspace prev
bindsym $mod+period workspace next

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock-pixeled, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec systemctl suspend, mode "default"
    bindsym h exec systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Alt_R mode "$mode_system"

bindsym $mod+x exec --no-startup-id i3lock-pixeled
# bindsym $mod+x exec --no-startup-id i3lock-fancy -t "><)))*>"

set $display_mode Display [w]ork [h]ome [m]obile
bindsym $mod+d mode $display_mode
mode "$display_mode" {
  bindsym w exec --no-startup-id autorandr --load work, mode "default"
  bindsym h exec --no-startup-id autorandr --load home, mode "default"
  bindsym m exec --no-startup-id autorandr --load mobile, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bar {
  font pango:FiraCode 10
  position top
  status_command bumblebee-status -m amixer pulseaudio brightness cpu getcrypto github date time battery -p interval=1 home.path=/home getcrypto.getltc=0 getcrypto.geteth=0 github.token=e6fed7b612143808e139e657e876176e40747a55 ping.address=87.250.250.242 ping.probes=3 ping.interval=120 -t greyish-powerline
}

