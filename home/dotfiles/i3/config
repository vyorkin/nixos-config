  status_command bumblebee-status -m amixer brightness date time battery -p interval=1 home.path=/home getcrypto.getltc=0 getcrypto.geteth=0 github.token=e6fed7b612143808e139e657e876176e40747a55 ping.address=87.250.250.242 ping.probes=3 ping.interval=120 -t gruvbox-powerline

  # status_command i3status-rs ~/.config/i3/status.toml

  colors {
    background #000000
    statusline #FFFFFF
    separator  #666666

    focused_workspace  #222222 #4D444E #FFFFFF
    active_workspace   #222222 #222222 #FFFFFF
    inactive_workspace #222222 #222222 #888888
    urgent_workspace   #222222 #900000 #FFFFFF
    binding_mode       #222222 #900000 #FFFFFF
  }
}

